<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset option="inrow">
	<field
		name="voorletters"
		type="text"
		label="voorletters"
		size="24"
		colinput="col-md-2"
        default="T.E.H."
    />
	<field
		name="roepnaam"
		type="text"
		label="roepnaam"
		size="32"
		required="true"
		colinput="col-md-2"
		collabel="col-md-1"
        default="Theo"
	/>
	</fieldset>
	<fieldset>
	<field
		name="achternaam"
		type="text"
		label="achternaam"
		size="64"
		required="true"
        default="van der Greft"
	/>
	<field
		name="geboortedatum"
		type="date"
		label="geboortedatum"
		size="48"
		required="true"
        default="27-03-1947"
	/>
	<field
		name="straat"
		type="text"
		label="straat"
		size="64"
		required="true"
        default="Laan van Poot"
	/>
	<field
		name="huisnummer"
		type="text"
		label="huisnummer"
		size="16"
		required="true"
        default="411"
	/>
	<field
		name="postcode"
		type="text"
		label="postcode"
		size="16"
		required="true"
        default="2566DA"
	/>
	<field
		name="woonplaats"
		type="text"
		label="woonplaats"
		size="64"
		required="true"
        default="Den Haag"
	/>
	</fieldset>
	<fieldset>
	<field
		name="telefoon"
		type="text"
		label="telefoon"
		size="64"
		required="false"
        default="0703963132"
		class="phone"
		classerror="geldig telefoonnummer invullen"
	/>
	<field
		name="mobiel"
		type="text"
		label="mobiel"
		size="64"
		required="false"
        default="0637375319"
		class="phone"
		classerror="geldig telefoonnummer invullen"
	/>
	<field
		name="email"
		type="text"
		label="email"
		size="64"
		required="true"
        default="tvdgreft@connect2music.nl"
		class="email"
		classerror="Een geldig emailadres invullen"
	/>
	</fieldset>
	<fieldset>
	<field
		name="beroep"
		type="text"
		label="(laatste)beroep"
		size="64"
		required="false"
        default="timmerman"
	/>
	<field
		name="interessegebied"
		type="checkboxes"
		label="interessegebied"
		size="100"
		paramoptions="interessegebied"
		optionsinline="true"
		other="anders"
		required="true"
		default='["Europa CEPT","Europa voorlopers","Suriname"]'
	/>
	</fieldset>
	<fieldset>
	<field
		name="vereniging"
		type="radio"
		label="Lid van andere vereningingen"
		size="16"
		options="ja,nee"
		optionsinline="true"
		other="anders"
		required="true"
        default="geen mening"
	/>
	<field
		name="vereniging_naam"
		type="text"
		label="naam"
		size="64"		
		required="false"
        default="hellasduin"
	/>
	<field
		name="vereniging_plaats"
		type="text"
		label="plaats"
		size="64"
		required="false"
        default="Den Haag"
	/>
	</fieldset>
	<fieldset>
	<field
		name="hobby"
		type="radio"
		label="Heeft u nog andere hobby's"
		size="16"
		options="ja,nee"
		optionsinline="true"
		required="true"
        default="ja"
	/>
	<field
		name="hobby_naam"
		type="text"
		label="welke"
		size="128"
		required="false"
        default="bridge"
	/>
	</fieldset>
	<fieldset>
	<field
		name="bestuur"
		type="radio"
		label="Heeft u bij andere verenigingen bestuurstaken gedaan of doet u dat nog"
		size="16"
		options="ja,nee"
		optionsinline="true"
		required="true"
        default="ja"
	/>
	<field
		name="bestuur_vereniging"
		type="text"
		label="Indien ja , Wat voor vereninging"
		size="128"
		required="false"
        default="Ekkelsia"
	/>
	<field
		name="bestuur_functie"
		type="text"
		label="Welke functie"
		size="64"
		required="false"
        default="penningmeester"
	/>
	</fieldset>
	<fieldset option="inrow">
	<field
		name="bestuur_van"
		type="date"
		label="van"
		size="64"
		colinput="col-md-2"
		required="false"
        default="01-01-1990"
	/>
	<field
		name="bestuur_tot"
		type="date"
		label="tot"
		size="64"
		colinput="col-md-2"
		collabel="col-md-1"
		required="false"
        default="01-01-2024"
	/>
	</fieldset>
	<fieldset>
	<field
		name="interesse"
		type="radio"
		label="Heeft u interesse om onze vereniging te ondersteunen in een commissie?"
		size="16"
		options="ja,nee"
		optionsinline="false"
		required="true"
        default="ja"
	/>
	<field
		name="taken"
		type="checkboxes"
		label="Op welk gebied"
		size="64"
		paramoptions="taken"
		optionsinline="false"
		other="anders"
		required="false"
	/>
	</fieldset>
</form>