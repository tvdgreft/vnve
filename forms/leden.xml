<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset option="inrow">
	<field
		name="voorletters"
		type="text"
		label="voorletters"
		size="16"
		colinput="col-md-2"
	/>
	<field
		name="roepnaam"
		type="text"
		label="roepnaam"
		size="32"
		required="true"
		colinput="col-md-2"
		collabel="col-md-1"
	/>
	</fieldset>
	<fieldset>
	<field
		name="achternaam"
		type="text"
		label="achternaam"
		size="32"
		required="true"
	/>
	<field
		name="geboortedatum"
		type="date"
		label="geboortedatum"
		size="16"
		required="true"
	/>
	<field
		name="straat"
		type="text"
		label="straat"
		size="64"
		required="true"
	/>
	<field
		name="huisnummer"
		type="text"
		label="huisnummer"
		size="16"
		required="true"
	/>
	<field
		name="postcode"
		type="text"
		label="postcode"
		size="16"
		required="true"
	/>
	<field
		name="woonplaats"
		type="text"
		label="woonplaats"
		size="64"
		required="true"
	/>
	</fieldset>
	<fieldset>
	<field
		name="telefoon"
		type="text"
		label="telefoon"
		size="16"
		required="false"
		class="phone"
		classerror="geldig telefoonnummer invullen"
	/>
	<field
		name="mobiel"
		type="text"
		label="mobiel"
		size="16"
		required="false"
		class="phone"
		classerror="geldig telefoonnummer invullen"
	/>
	<field
		name="email"
		type="text"
		label="email"
		size="32"
		required="true"
		class="email"
		classerror="geldig email adres invullen"
	/>
	</fieldset>
	<fieldset>
	<field
		name="beroep"
		type="text"
		label="(laatste)beroep"
		size="64"
		required="false"
	/>
	<field
		name="interessegebied"
		type="checkboxes"
		label="interessegebied"
		size="64"
		paramoptions="interessegebied"
		optionsinline="false"
		other="anders"
		required="true"
	/>
	</fieldset>
	<fieldset>
	<field
		name="vereniging"
		type="radio"
		label="Lid van andere verenigingen"
		size="16"
		options="ja,nee"
		optionsinline="true"
		required="true"
	/>
	<field
		name="vereniging_naam"
		type="text"
		label="naam"
		size="64"		
		required="false"
	/>
	<field
		name="vereniging_plaats"
		type="text"
		label="plaats"
		size="64"
		required="false"
	/>
	</fieldset>
	<fieldset>
	<field
		name="hobby"
		type="radio"
		label="Heeft u nog andere hobby's"
		size="16"
		options="ja,nee"
		optionsinline="true"
		required="true"
	/>
	<field
		name="hobby_naam"
		type="text"
		label="welke"
		size="128"
		required="false"
	/>
	</fieldset>
	<fieldset>
	<field
		name="bestuur"
		type="radio"
		label="Heeft u bij andere verenigingen bestuurstaken gedaan of doet u dat nog"
		size="16"
		options="ja,nee"
		optionsinline="true"
		required="true"
	/>
	<field
		name="bestuur_vereniging"
		type="text"
		label="Indien ja , Wat voor vereninging"
		size="128"
		required="false"
	/>
	<field
		name="bestuur_functie"
		type="text"
		label="Welke functie"
		size="64"
		required="false"
	/>
	</fieldset>
	<fieldset option="inrow">
	<field
		name="bestuur_van"
		type="date"
		label="van"
		size="16"
		colinput="col-md-2"
		required="false"
	/>
	<field
		name="bestuur_tot"
		type="date"
		label="tot"
		size="16"
		colinput="col-md-2"
		collabel="col-md-1"
		required="false"
	/>
	</fieldset>
	<fieldset>
	<field
		name="interesse"
		type="radio"
		label="Heeft u interesse om onze vereniging te ondersteunen in een commissie?"
		size="16"
		options="ja,nee"
		optionsinline="false"
		required="true"
	/>
	<field
		name="taken"
		type="checkboxes"
		label="Op welk gebied"
		size="64"
		paramoptions="taken"
		optionsinline="false"
		other="anders"
		required="false"
	/>
	</fieldset>
</form>