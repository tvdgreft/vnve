<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
	<field
		name="docid"
		type="text"
		label="documentcode"
		size="20"
		required="false"
	/>
	<field
		name="title"
		type="text"
		label="titel"
		size="50"
		required="true"
	/>
	<field
		name="publisher"
		type="text"
		label="uitgever"
		size="50"
		required="false"
	/>
	<field
		name="pubdate"
		type="date"
		label="publicatiedatum"
		size="50"
		required="false"
	/>
	<field
		name="expirationdate"
		type="date"
		label="verloopdatum"
		size="50"
		required="false"
	/>
	<field
		name="status"
		type="dropdown"
		label="status"
		size="100"
		required="true"
		options="open,restricted"
	/>
	<field
		name="description"
		type="textarea"
		label="omschrijving"
		size="100"
		rows="5"
		required="false"
	/>
	<field
		name="rubric"
		type="dropdown"
		label="rubriek"
		size="100"
		required="true"
		options="luxemburg,monaco"
	/>
	<field
		name="document"
		type="wordpressmedia"
		label="Welk bestand(optioneel)"
		size="100"
		accept="pdf,jpg,png"
	/>
	<field
		name="doctype"
		type="dropdown"
		label="soort document"
		size="100"
		required="true"
		options="pdf,image"
	/>
	<field
		name="link"
		type="text"
		label="externe link"
		size="50"
		required="false"
	/>
	</fieldset>
</form>